{
  "hooks": {
    "before:init": "npm test",
    "before:release": "npm run build",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "tagName": "v%s"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "assets": ["build/*.js", "build/*.mjs"]
  }
}
